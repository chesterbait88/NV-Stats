{
    "layout": {
        "type": "combobox",
        "default": "single-row",
        "description": "Display Layout",
        "options": {
            "Single Row (Horizontal)": "single-row",
            "Two Rows (2x2)": "two-row"
        },
        "tooltip": "Choose how GPU stats are displayed in the panel"
    },
    "refreshInterval": {
        "type": "combobox",
        "default": 2,
        "description": "Refresh Interval",
        "options": {
            "1 second": 1,
            "2 seconds": 2,
            "5 seconds": 5,
            "10 seconds": 10
        },
        "tooltip": "How often to update GPU statistics"
    },

    "header-display": {
        "type": "header",
        "description": "Display Settings"
    },

    "labelStyle": {
        "type": "combobox",
        "default": "full",
        "description": "Label Style",
        "options": {
            "Full (GPU: 42%)": "full",
            "Abbreviated (G: 42%)": "abbreviated",
            "Ultra Compact (G:42)": "compact"
        },
        "tooltip": "Choose how labels and values are displayed"
    },

    "header-font-style": {
        "type": "header",
        "description": "Font Style"
    },

    "fontSize": {
        "type": "spinbutton",
        "default": 9,
        "min": 6,
        "max": 16,
        "step": 1,
        "units": "pt",
        "description": "Font Size",
        "tooltip": "Size of the text in the panel (6-16 pt)"
    },

    "boldText": {
        "type": "checkbox",
        "default": false,
        "description": "Bold Text",
        "tooltip": "Make all text bold for better visibility"
    },

    "textShadow": {
        "type": "checkbox",
        "default": false,
        "description": "Text Shadow",
        "tooltip": "Add shadow to text for better readability on busy backgrounds"
    },

    "fontFamily": {
        "type": "combobox",
        "default": "monospace",
        "description": "Font Family",
        "options": {
            "Monospace (Default)": "monospace",
            "DejaVu Sans Mono": "DejaVu Sans Mono",
            "Ubuntu Mono": "Ubuntu Mono",
            "Liberation Mono": "Liberation Mono",
            "Courier New": "Courier New",
            "FreeMono": "FreeMono",
            "Courier": "Courier",
            "Noto Mono": "Noto Mono",
            "Sans": "sans-serif",
            "Serif": "serif"
        },
        "tooltip": "Choose the font family for the display text"
    },

    "header-ui-spacing": {
        "type": "header",
        "description": "UI Spacing"
    },

    "verticalPadding": {
        "type": "spinbutton",
        "default": 2,
        "min": 0,
        "max": 11,
        "step": 1,
        "units": "px",
        "description": "Vertical Padding",
        "tooltip": "Padding above and below text (0-11 px) - higher values may expand panel"
    },

    "horizontalPadding": {
        "type": "spinbutton",
        "default": 8,
        "min": 0,
        "max": 30,
        "step": 2,
        "units": "px",
        "description": "Horizontal Padding",
        "tooltip": "Padding on left and right sides (0-30 px)"
    },

    "lineSpacing": {
        "type": "spinbutton",
        "default": 4,
        "min": 0,
        "max": 10,
        "step": 1,
        "units": "px",
        "description": "Line Spacing (2x2 layout)",
        "tooltip": "Space between the two rows in 2x2 layout (0-10 px)"
    },

    "itemSpacing": {
        "type": "spinbutton",
        "default": 1,
        "min": 0,
        "max": 5,
        "step": 1,
        "units": "spaces",
        "description": "Item Spacing",
        "tooltip": "Spacing between items - Single-row: around | divider, 2x2: between columns (0-5 spaces)"
    },

    "header-ui-color": {
        "type": "header",
        "description": "UI Color"
    },

    "enableBackground": {
        "type": "checkbox",
        "default": false,
        "description": "Enable Background",
        "tooltip": "Add a background color behind the applet"
    },

    "backgroundColor": {
        "type": "colorchooser",
        "default": "rgba(0, 0, 0, 0.5)",
        "description": "Background Color",
        "tooltip": "Background color (supports transparency)"
    },

    "enableBorder": {
        "type": "checkbox",
        "default": false,
        "description": "Enable Border",
        "tooltip": "Add a border around the applet"
    },

    "borderColor": {
        "type": "colorchooser",
        "default": "rgba(255, 255, 255, 0.3)",
        "description": "Border Color",
        "tooltip": "Border color (supports transparency)"
    },

    "borderWidth": {
        "type": "spinbutton",
        "default": 1,
        "min": 1,
        "max": 5,
        "step": 1,
        "units": "px",
        "description": "Border Width",
        "tooltip": "Width of the border (1-5 px)"
    },

    "header-temperature": {
        "type": "header",
        "description": "Temperature Settings"
    },

    "enableColorCoding": {
        "type": "checkbox",
        "default": true,
        "description": "Enable temperature color coding",
        "tooltip": "Apply colors based on GPU temperature (green/yellow/red)"
    },

    "colorNormal": {
        "type": "colorchooser",
        "default": "rgba(74, 222, 128, 1.0)",
        "description": "Normal Temperature Color",
        "tooltip": "Color for temperatures below warning threshold (green by default)"
    },

    "colorWarning": {
        "type": "colorchooser",
        "default": "rgba(251, 191, 36, 1.0)",
        "description": "Warning Temperature Color",
        "tooltip": "Color for temperatures between warning and critical thresholds (yellow by default)"
    },

    "colorCritical": {
        "type": "colorchooser",
        "default": "rgba(239, 68, 68, 1.0)",
        "description": "Critical Temperature Color",
        "tooltip": "Color for temperatures above critical threshold (red by default)"
    },

    "tempWarningThreshold": {
        "type": "spinbutton",
        "default": 70,
        "min": 50,
        "max": 95,
        "step": 5,
        "units": "째C",
        "description": "Warning Temperature",
        "tooltip": "Temperature at which the warning color is applied (50-95째C)"
    },

    "tempCriticalThreshold": {
        "type": "spinbutton",
        "default": 85,
        "min": 60,
        "max": 100,
        "step": 5,
        "units": "째C",
        "description": "Critical Temperature",
        "tooltip": "Temperature at which the critical color is applied (60-100째C)"
    }
}
